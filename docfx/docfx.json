{
  "build": {
    "content": [
      {
        "files": [
          "toc.yml",
          "*.md",
          "contributing/*.md",
          "contributing/toc.yml"
        ]
      },
      {
        "files":[
          "toc.yml",
          "**.md",
          "**/**.md"
        ],
        "src": "../scripts",
        "dest": ""
      }
    ],
    "resource": [
      {
        "files": [
          "assets/**",
          "404.html"
        ]
      },
      {
        "files":[
          "**/assets/*.png",
          "**/assets/*.jpg",
          "**/assets/*.gif",
          "**/assets/sample.json",
          "**/assets/*.csv",
          "**/assets/*.json"
        ],
        "src": "../scripts",
        "dest": ""
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/material"
    ],
    "sitemap": {
      "baseUrl": "https://pnp.github.io/script-samples/",
      "priority": 1.0,
      "changefreq": "daily",
      "fileOptions":{
        "../scripts/_template-script-submission/**.md": {
            "baseUrl": "https://pnp.github.io/script-samples/",
            "changefreq": "never",
            "priority": 0.1
        }
    }
    },
    "postProcessors": ["FrontMatterProcessor"],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": true,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": "PnP Samples",
      "_appFooter": "<span>Script Samples<br>Generated by <strong><a href='https://dotnet.github.io/docfx' alt='Doc FX Website'>DocFX</a></strong> with <strong><a href='https://ovasquez.github.io/docfx-material' alt='DocFx Material Theme'>Material UI</a></strong></span>",
      "_appFaviconPath": "https://c.s-microsoft.com/favicon.ico?v2",
      "_appLogoPath": "assets/logo.svg",
      "_description":"A sample gallery of scripts to manage all things Microsoft 365.",
      "_enableSearch": false,
      "_enableNewTab": true,
      "_disableAffix": true,
      "_disableBreadcrumb": true,
      "_disableNavbar": false,
      "_gitContribute": {

      }
    }
  }
}